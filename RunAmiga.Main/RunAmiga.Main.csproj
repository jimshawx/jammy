<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ApplicationIcon>amiga.ico</ApplicationIcon>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <PlatformTarget>AnyCPU</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <PlatformTarget>AnyCPU</PlatformTarget>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="appSettings.json" />
    <None Remove="emulationSettings.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="emulationSettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="appSettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Configuration" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\RunAmiga.Core.CPU.CSharp.MC68020\RunAmiga.Core.CPU.CSharp.MC68020.csproj" />
    <ProjectReference Include="..\RunAmiga.Core.CPU.CSharp\RunAmiga.Core.CPU.CSharp.csproj" />
    <ProjectReference Include="..\RunAmiga.Core.CPU.Musashi.MC68020\RunAmiga.Core.CPU.Musashi.MC68020.csproj" />
    <ProjectReference Include="..\RunAmiga.Core.CPU.Musashi.MC68030\RunAmiga.Core.CPU.Musashi.MC68030.csproj" />
    <ProjectReference Include="..\RunAmiga.Core.CPU.Musashi\RunAmiga.Core.CPU.Musashi.csproj" />
    <ProjectReference Include="..\RunAmiga.Core\RunAmiga.Core.csproj" />
    <ProjectReference Include="..\RunAmiga.Debugger\RunAmiga.Debugger.csproj" />
    <ProjectReference Include="..\RunAmiga.Disassembler\RunAmiga.Disassembler.csproj" />
    <ProjectReference Include="..\RunAmiga.Extensions\RunAmiga.Extensions.csproj" />
    <ProjectReference Include="..\RunAmiga.Logger.DebugAsyncRTF\RunAmiga.Logger.DebugAsyncRTF.csproj" />
    <ProjectReference Include="..\RunAmiga.Logger.DebugAsync\RunAmiga.Logger.DebugAsync.csproj" />
    <ProjectReference Include="..\RunAmiga.Logger.SQLite\RunAmiga.Logger.SQLite.csproj" />
    <ProjectReference Include="..\RunAmiga.UI.Settings\RunAmiga.UI.Settings.csproj" />
    <ProjectReference Include="..\RunAmiga.UI\RunAmiga.UI.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Dialogs\Find.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Dialogs\GoTo.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="RunAmiga.cs">
      <SubType>Form</SubType>
    </Compile>
  </ItemGroup>

</Project>